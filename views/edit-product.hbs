<div class="w-75 mx-auto">
    <h1>Edit Product</h1>
    {{#if editProductError}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>Error!</strong>
        {{editProductError}}
        <button type="button" class="btn-close" id="buttonClose" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
    <form action="/edit-product/{{product._id}}" method="POST">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Title</label>
            <input name="title" type="text" class="form-control" id="exampleFormControlInput1"
                placeholder="Sarlavha kiriting" value="{{product.title}}">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Description</label>
            <textarea name="description" type="text" class="form-control" id="exampleFormControlTextarea1"
                placeholder="Ta'rifni kiriting">{{product.description}}</textarea>
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Image</label>
            <input name="image" type="text" class="form-control" id="exampleFormControlTextarea1"
                placeholder="Image url kiriting" value="{{product.image}}"></input>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text">$</span>
            <div class="form-floating">
                <input name="price" type="number" class="form-control" id="floatingInputGroup1" placeholder="Username" value="{{product.price}}">
                <label for="floatingInputGroup1">Price</label>
            </div>
        </div>
        <button class="btn btn-primary px-4">Edit product</button>
    </form>
</div>